@model MaterialCreateDto
@{
    ViewData["Title"] = "Malzeme Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Malzeme Ekle</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="card">
        <div class="card-block">
            <form asp-area="Admin" asp-controller="Material" asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name">Malzeme Adı</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Brand">Marka</label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MaterialTypeId">Malzeme Tipi</label>
                            <select asp-for="MaterialTypeId" class="form-control" asp-items="ViewBag.MaterialTypes">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="MaterialTypeId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StockCategoryCode">Stok Kategorisi</label>
                            <select asp-for="StockCategoryCode" class="form-control" asp-items="ViewBag.StockCategories">
                                <option value="">Seçiniz...</option>
                            </select>
                            <span asp-validation-for="StockCategoryCode" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Color">Renk</label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="UnitCost">Birim Maliyet</label>
                            <input asp-for="UnitCost" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="UnitCost" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CurrentStock">Mevcut Stok</label>
                            <input asp-for="CurrentStock" class="form-control" type="number" />
                            <span asp-validation-for="CurrentStock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MinimumStock">Minimum Stok</label>
                            <input asp-for="MinimumStock" class="form-control" type="number" />
                            <span asp-validation-for="MinimumStock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReorderPoint">Yeniden Sipariş Noktası</label>
                            <input asp-for="ReorderPoint" class="form-control" type="number" />
                            <span asp-validation-for="ReorderPoint" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SKU">Stok Taki Numarası</label>
                            <input asp-for="SKU" class="form-control" />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="BatchNumber">Parti Numarası</label>
                            <input asp-for="BatchNumber" class="form-control" />
                            <span asp-validation-for="BatchNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="WeightPerUnit">Birim Ağırlık</label>
                            <input asp-for="WeightPerUnit" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="WeightPerUnit" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Location">Konum</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Specifications">Özellikler</label>
                            <textarea asp-for="Specifications" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Specifications" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="switch switch-primary d-inline m-r-10">
                                <input asp-for="IsActive" type="checkbox" id="isActive-switch">
                                <label for="isActive-switch" class="cr"></label>
                            </div>
                            <label asp-for="IsActive">Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="feather icon-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="feather icon-x"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>